@model IEnumerable<OtzarHaSeforim.Models.LibraryModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Libraries</h1>
<p>@ViewBag.Id</p>
<p>
    <a asp-action="Create">Add new library</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreLibrary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreLibrary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Shelves", "Index", "Shelf", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
